<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="me.injent.myschool.MsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySchool.Starting"
        tools:targetApi="tiramisu"
        android:enableOnBackInvokedCallback="true">
        <activity
            android:name="me.injent.myschool.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MySchool.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="@string/auth_deeplink_label">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/redirect_scheme"
                    android:host="@string/redirect_host"
                    android:pathPrefix="/" />
            </intent-filter>
        </activity>
    </application>
</manifest>